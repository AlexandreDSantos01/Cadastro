@model Cadastro.Models.Usuario

<header><b>Cadastro de Usuário</b></header>

<form asp-action="Create" asp-controller="Usuario" method="post">
    <!-- Contêiner para informações pessoais -->
    <div class="container border rounded p-4 mb-4">
        <h4><strong>Informações Pessoais</strong></h4>
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" id="Nome" name="Nome" class="form-control" value="@Model?.Nome" required />
        </div>
        <div class="form-group">
            <label for="DataNasc">Data de Nascimento</label>
            <input type="date" id="DataNasc" name="DataNasc" class="form-control" value="@Model?.DataNasc.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="form-group">
            <label for="TipoSexo">Sexo</label>
            <select id="TipoSexo" name="TipoSexo" class="form-control">
                @foreach (var sexo in ViewBag.Sexos)
                {
                    <option value="@sexo">@sexo</option>
                }
            </select>
        </div>
    </div>

    <!-- Contêiner para informações adicionais -->
    <div class="container border rounded p-4 mb-4">
        <h4><i></i>Informações Adicionais</i></h4>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="Email" id="Email" name="Email" class="form-control" value="@Model?.Email" required />
        </div>
        <div class="form-group">
            <label for="Endereco">Endereço</label>
            <input type="Endereco" id="Endereco" name="Endereco" class="form-control" value="@Model?.Endereco" required />
        </div>
        <div class="form-group">
            <label for="NRua">Numero da Rua</label>
            <input type="NRua" id="NRua" name="NRua" class="form-control" value="@Model?.NRua" required />
        </div>
    </div>

    <!-- Botão de envio -->
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>
</form>
